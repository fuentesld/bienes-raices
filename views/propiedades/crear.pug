extends ../layout/index 

block contenido
    div.py-10
        h1.text-4xl.my-10.fonnt-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold #{pagina}

        div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
            form.space-y-8
                div.space-y-5
                    h3.text-lg.leading-6.font-medium.text-gray-900 Informacion General 
                    p.text-gray-600 Añade Información sobre la propiedad en venta 

                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="titulo") Título de Anuncio
                        input#titulo.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Título de la Propiedad, ej. Casa en la Playa" type="text" name="titulo")
                    
                    div(class="md:flex md:gap-4 space-y-5 md:space-y-0")

                        div(class="md:w-1/2")
                            label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="categoria") Título de Anuncio
                            select#categoria.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="categoria")
                                option(value="") - Seleccione -

                        div(class="md:w-1/2")
                            label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="precio") Precio
                            select#precio.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="precio")
                                option(value="") - Seleccione -

                    div(class="md:flex md:gap-4 space-y-5 md:space-y-0")

                        div(class="md:w-1/3")
                            label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="habitaciones") Habitaciones
                            select#habitaciones.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="habitaciones")
                                option(value="") - Seleccione -
                                - let habitacion = 1;
                                    while habitacion < 6
                                        option(value=habitacion) #{habitacion++}

                        div(class="md:w-1/3")
                            label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="estacionamientos") Estacionamientos
                            select#estacionamientos.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="estacionamientos")
                                option(value="") - Seleccione -
                                - let estacionamiento = 1;
                                    while estacionamiento < 6
                                        option(value=estacionamiento) #{estacionamiento++}

                        div(class="md:w-1/3")
                            label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="wc") WC
                            select#wc.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="wc")
                                option(value="") - Seleccione -
                                - let wc = 1;
                                    while wc < 7
                                        option(value=wc) #{wc++}