extends ../layout/index 

block contenido
    div.py-11
        h1.text-4xl.my-10.fonnt-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold #{pagina}
        div.mt-8.mx-auto.max-w-md
            div.bg-white.py-8.px-4.shadow
                form.space-y-5
                    
                    div
                        label.block.text-sm.uppercase.text-grey-500.mb-2.fontbold(for="email" name="nombre") Email de Registro
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu e-mail" type="email" name="email")

                    div(class="flex items-center justify-between")
                        a(href="/auth/login" class="text-gray-500 text-xs") ¿Ya tienes Cuenta? Iniciar Sessión
                        a(href="/auth/registro" class="text-gray-500 text-xs") ¿No tienes Cuenta? Crea una

                    input(type="submit" value="Enviar Instrucciones" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold cursor-pointer py-3")
