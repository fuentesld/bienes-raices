extends ../layout/index 

block contenido
    div.py-11
        h1.text-4xl.my-10.fonnt-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold #{pagina}
        div.mt-8.mx-auto.max-w-md
            div.bg-white.py-8.px-4.shadow
                form.space-y-5
                    div 
                        label.block.text-sm.uppercase.text-grey-500.mb-2.fontbold(for="nombre") Tu nombre
                        input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu nombre")
                    div
                        label.block.text-sm.uppercase.text-grey-500.mb-2.fontbold(for="email" name="nombre") Email de Registro
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu e-mail" type="email" name="email")
                    div
                        label.block.text-sm.uppercase.text-grey-500.mb-2.fontbold(for="password" name="password") Password
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Password" type="password" name="password")
                    div
                        label.block.text-sm.uppercase.text-grey-500.mb-2.fontbold(for="repetir_password" name="password") Repetir Password
                        input#repetir_password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Repetir Password" type="password" name="repetir_password")
                    input(type="submit" value="Crear Cuenta" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold cursor-pointer")
